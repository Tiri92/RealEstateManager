<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/property_list_fragment">

    <fragment
        android:id="@+id/property_list_fragment"
        android:name="thierry.realestatemanager.ui.propertylist.PropertyListFragment"
        android:label="@string/app_title">
        <action
            android:id="@+id/show_item_detail"
            app:destination="@id/property_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/property_detail_fragment"
        android:name="thierry.realestatemanager.ui.propertydetail.PropertyDetailFragment"
        android:label="@string/app_title"
        tools:layout="@layout/fragment_property_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/add"
        android:name="thierry.realestatemanager.ui.addproperty.AddPropertyFragment"
        android:label="@string/app_title"
        tools:layout="@layout/fragment_add_update_property" />
    <fragment
        android:id="@+id/edit"
        android:name="thierry.realestatemanager.ui.updateproperty.UpdatePropertyFragment"
        android:label="@string/app_title"
        tools:layout="@layout/fragment_add_update_property" />
    <fragment
        android:id="@+id/map"
        android:name="thierry.realestatemanager.ui.googlemap.GoogleMapFragment"
        android:label="@string/app_title"
        tools:layout="@layout/fragment_google_map" />

</navigation>