<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/item_list_fragment">

    <fragment
        android:id="@+id/item_list_fragment"
        android:name="thierry.realestatemanager.ui.ItemListFragment"
        android:label="@string/app_title">
        <action
            android:id="@+id/show_item_detail"
            app:destination="@id/item_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/item_detail_fragment"
        android:name="thierry.realestatemanager.ui.ItemDetailFragment"
        android:label="@string/app_title"
        tools:layout="@layout/fragment_item_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/add"
        android:name="thierry.realestatemanager.ui.AddPropertyFragment"
        android:label="fragment_add_and_update_property"
        tools:layout="@layout/fragment_add_property" />
    <fragment
        android:id="@+id/edit"
        android:name="thierry.realestatemanager.ui.UpdatePropertyFragment"
        android:label="fragment_add_and_update_property"
        tools:layout="@layout/fragment_update_property" />

</navigation>